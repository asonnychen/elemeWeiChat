@import "../../fonts/iconfont.wxss";
.cartcontrol {
  font-size: 0;
}

.cartcontrol-warp {
  position: absolute;
  bottom: 15px;
  right: 15px;
  width: 70px;
  height: 22px;
}

.cartcontrol-warp .cartcontrol-inner {
  position: relative;
}

.cartcontrol-warp .span {
  position: absolute;
  left: 0;
  top: 0;
  display: block;
  width: 140rpx;
  height: 44rpx;
  background: rgb(0, 160, 220);
  border-radius: 24px;
  text-align: center;
  color: #fff;
  line-height: 44rpx;
  font-size: 20rpx;
  opacity: 1;
  z-index: 9;
  transition: all .5s;
  transition-delay: 100ms;
}

.cartcontrol .cart-count {
  position: absolute;
  right: 21px;
  top: -4px;
  color: #999;
  font-size: 13px;
  line-height: 30px;
  width: 23px;
  text-align: center;
}

.cartcontrol .cart-add,
.cartcontrol .cart-decrease {
  position: absolute;
  right: -8px;
  top: -5px;
  display: inline-block;
  padding: 5px;
  color: #00a0dc;
  z-index: 8;
}

.cartcontrol .cart-decrease{
  z-index: 7;
}

.cartcontrol .cart-decrease.on {
  transition: transform 300ms ease 0ms;
  transform: translate3d(-50px, 0px, 0px) rotate(-360deg);
  transform-origin: 50% 50% 0px;
}

.cartcontrol .cart-add .icon,
.cartcontrol .cart-decrease .icon {
  display: inline-block;
}

.cartcontrol .cart-add .icon .icon-add-circle,
.cartcontrol .cart-decrease .icon .icon-remove-circle {
  font-size: 45rpx;
}


