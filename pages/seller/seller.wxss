.seller {
  position: absolute;
  top: 145px;
  bottom: 0;
  left: 0;
  width: 100%;
  overflow: hidden;
}

.seller .overview {
  padding: 18px 18px 18px 18px;
  background: #fff;
}

.seller .overview .title {
  margin-bottom: 8px;
  line-height: 14px;
  color: #07111b;
  font-size: 14px;
}

.seller .overview .desc {
  padding-bottom: 8px;
  line-height: 18px;
  border-bottom: 1px solid rgba(6, 13, 21, 0.23);
  font-size: 0;
}

.seller .overview .desc .star {
  display: inline-block;
  margin-right: 8px;
}

.seller .overview .desc .text {
  margin: 0 12px;
  display: inline-block;
  vertical-align: top;
  font-size: 14px;
  color: #4d555d;
}

.seller .overview .remark {
  display: flex;
  padding-top: 18px;
}

.seller .overview .remark .block {
  flex: 1;
  text-align: center;
  border-right: 1px solid rgba(6, 13, 21, 0.23);
}

.seller .overview .remark .block:last-child {
  border: none;
}

.seller .overview .remark .block .h2 {
  margin-bottom: 4px;
  line-height: 24px;
  font-size: 12px;
  color: #93999f;
}

.seller .overview .remark .block .content {
  line-height: 24px;
  font-size: 10px;
  color: #07111b;
}

.seller .overview .remark .block .content .stress {
  font-size: 24px;
  vertical-align: bottom;
}

.seller .overview .remark .block .content .stress .small {
  font-size: 12px;
  color: #07111b;
}

.seller .bulletin {
  padding: 18px 18px 0 18px;
  background: #fff;  
}

.seller .bulletin .title {
  margin-bottom: 8px;
  line-height: 14px;
  color: #07111b;
  font-size: 14px;
}

.seller .bulletin .content-wrap {
  padding: 0 12px 16px 12px;
  border-bottom: 1px solid rgba(6, 13, 21, 0.23);
}

.seller .bulletin .content-wrap .content {
  line-height: 24px;
  font-size: 12px;
  color: #f01414;
}

.seller .supports-wrap {
  padding: 18px 10px;
  margin: 0 auto;
  background: #fff;
}

.seller .supports-wrap .supports .supports-item {
  padding: 16px 0;
  border-bottom: 1px solid rgba(6, 13, 21, 0.23);
  margin-bottom: 0;
}

.seller .supports-wrap .supports .supports-item:first-child {
  padding-top: 0;
}

.seller .supports-wrap .supports .supports-item:last-child {
  border-bottom: none;
  padding-bottom: 0;
}

.seller .pics {
  padding: 18px;
  background: #fff;  
}

.seller .pics .title {
  line-height: 14px;
  color: #07111b;
  font-size: 14px;
  padding-bottom: 12px;
}

.seller .pics .scrollx{
  width: 100%;
  height: 90px;
}

.seller .pics .pics-wrap {
  height: 90px;
}

.seller .pics .pics-wrap image {
  width: 120px;
  height: 90px;
  padding: 0;
  margin-right: 6px;
}

.seller .pics .pics-wrap image:last-child {
  margin-right: 0;
}

.seller .infos {
  background: #fff;
  padding: 18px;
}

.seller .infos .title {
  line-height: 14px;
  color: #07111b;
  font-size: 14px;
  padding-bottom: 12px;
  border-bottom: 1px solid rgba(6, 13, 21, 0.23);
}

.seller .infos .text .item {
  padding: 16px 12px;
  border-bottom: 1px solid rgba(6, 13, 21, 0.23);
  font-size: 12px;
  color: #07111b;
  line-height: 16px;
}

.seller .infos .text .item:last-child{
  border: none;
}


